<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0-windows7.0;net7.0-windows7.0;net8.0-windows7.0;net9.0-windows7.0</TargetFrameworks>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ImplicitUsings>enable</ImplicitUsings>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <Product></Product>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <RepositoryUrl>https://github.com/Axvser/MinimalisticWPF.Controls</RepositoryUrl>
    <NeutralLanguage>zh-CN</NeutralLanguage>
    <Description>Design some user controls based on [ MinimalisticWPF ]</Description>
    <Authors>Axvser</Authors>
    <PackageProjectUrl>https://github.com/Axvser/MinimalisticWPF.Controls</PackageProjectUrl>
    <Version>1.0.1</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MinimalisticWPF" Version="2.8.0" />
    <PackageReference Include="MinimalisticWPF.Generator" Version="2.1.3" />
    <PackageReference Include="NetCore5.0.Microsoft.Expression.Drawing" Version="1.0.0" />
  </ItemGroup>

  <ItemGroup>
    <None Include="README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <Folder Include="ViewModel\NavigateBox\" />
    <Folder Include="ViewModel\Notification\" />
  </ItemGroup>

</Project>
