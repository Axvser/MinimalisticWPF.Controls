<UserControl x:Class="MinimalisticWPF.Controls.TopBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MinimalisticWPF.Controls"
             xmlns:cvt="clr-namespace:MinimalisticWPF.Controls.Convertor"
             mc:Ignorable="d"
             Height="30"
             d:DesignHeight="30" d:DesignWidth="800" Foreground="White" VerticalAlignment="Top">
    <UserControl.Resources>
        <cvt:DoubleConvertor Rate="0.7" x:Key="GetFontSize"/>
        <Style TargetType="local:Button">
            <Setter Property="DarkHoveredForeground" Value="Cyan"/>
            <Setter Property="DarkNoHoveredForeground" Value="White"/>
            <Setter Property="LightHoveredForeground" Value="Violet"/>
            <Setter Property="LightNoHoveredForeground" Value="#1e1e1e"/>
        </Style>
    </UserControl.Resources>
    <UserControl.Template>
        <ControlTemplate>
            <Grid Background="{TemplateBinding Background}" Opacity="{TemplateBinding Opacity}">
                <TextBlock Text="Title" FontSize="{TemplateBinding Height,Converter={StaticResource GetFontSize}}" Foreground="{TemplateBinding Foreground}" VerticalAlignment="Center" HorizontalAlignment="Left" TextAlignment="Center" Margin="15,0,0,0"/>
                <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft" HorizontalAlignment="Right">
                    <local:Button Text="×" Click="Button_Click" HorizontalAlignment="Right" Width="{TemplateBinding Height}" Margin="0,0,15,0" Grid.ZIndex="1"/>
                    <local:Button Text="▢" Click="Button_Click_1" HorizontalAlignment="Right" Width="{TemplateBinding Height}" Margin="0,0,15,0" Grid.ZIndex="1"/>
                    <local:Button Text="－" Click="Button_Click_2" HorizontalAlignment="Right" Width="{TemplateBinding Height}" Margin="0,0,15,0" Grid.ZIndex="1"/>
                </StackPanel>
            </Grid>
        </ControlTemplate>
    </UserControl.Template>
</UserControl>
